<h1>New Employee</h1>

<%= form_with model: @employee do |form| %>
  <div>
    <%= form.label :f_name %><br>
    <%= form.text_field :f_name %>
  </div><br>

  <div>
    <%= form.label :l_name %><br>
    <%= form.text_field :l_name %>
  </div><br>

  <div>
    <%= form.label :dob %><br>
    <%= form.date_field :dob %>
  </div><br>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div><br>

    <div>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </div><br>

  <div>
    <%= form.label :contact_no %><br>
    <%= form.telephone_field :contact_no %>
  </div><br>

  <div>
    <%= form.label :designation %><br>
    <%= form.text_field :designation %>
  </div><br>

  <div>
    <%= form.label :hire_date %><br>
    <%= form.date_field :hire_date %>
  </div><br>

    <div>
    <%= form.label :resign_date %><br>
    <%= form.date_field :resign_date %>
  </div><br>

  <div>
    <%= form.label :salary %><br>
    <%= form.number_field :salary %>
  </div><br>

  <div>
    <%= form.label :ctc %><br>
    <%= form.number_field :ctc %>
  </div><br>

  <div>
    <%= form.label :bank_account_number %><br>
    <%= form.number_field :bank_account_number %>
  </div><br>

  <div>
    <%= form.submit %>
  </div>
<% end %>