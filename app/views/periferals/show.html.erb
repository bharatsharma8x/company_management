<%= link_to "Back", periferals_path %> <br>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg">
      <p>
        <strong>id : </strong>
        <%= @periferal.id %>
      </p>

      <p>
        <strong>Name: </strong>
        <%= @periferal.name %>
      </p>

      <p>
        <strong>Description: </strong>
        <%= @periferal.description %>
      </p>

      <p>
        <strong>Category: </strong>
        <%= @periferal.category %>
      </p>

      <p>
        <strong>Purchase date: </strong>
        <%= @periferal.purchase_date %>
      </p>

      <p>
        <strong>Purchase cost: </strong>
        <%= @periferal.purchase_cost %>
      </p>

      <p>
        <strong>Condition: </strong>
        <%= @periferal.condition %>
      </p>

      <p>
        <strong>Warranty start date: </strong>
        <%= @periferal.warranty_start_date %>
      </p>

      <p>
        <strong>Warranty Duration(mm): </strong>
        <%= @periferal.warranty_duration_months %>
      </p>

      <p>
        <strong>Warranty till: </strong>
        <%= @periferal.warranty_end_date %>
      </p>
    </div>

    <div class="col-sm">
      <%if @periferal.bill.attached? %>
        <%= image_tag @periferal.bill, { class: 'doc_img' } %>
      <%end%>
      <br><br><br>
      <%= link_to "Edit", [:edit, @periferal] %>
      <%= link_to "Destroy", @periferal,
        method: :delete,
        data: { confirm: 'Are you sure?'} %>
    </div>
  </div>
</div>
