<%= form_with model: @department, local: true do |form| %>
  <div>
    <%= form.label "Department Name" %><br>
    <%= form.text_field :department_name %>
    <% @department.errors.full_messages_for(:department_name).each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
  </div> <br>

  <div>
    <%= form.submit %>
    <%= submit_tag("Reset", { :name => 'reset', :id => 'reset_button', :type => "reset" }) %>
  </div>
<% end %>