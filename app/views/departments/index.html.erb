<div class="d-flex align-items-center justify-content-center">
  <h1>Department List</h1>
</div>

<%= link_to "New Department", new_department_path %><br><br>

<div class="table-responsive">
  <table class="table">
    <tr>
      <th>ID</th>
      <th>
        Department_name
        <%= link_to departments_path(order_by: "department_name", order: toggle_sort_order(params[:order], "department_name")) do %>
          <% if params[:order_by] == "department_name" && params[:order] == "asc" %>
            <i class="fa fa-arrow-up"></i>
          <% else %>
            <i class="fa fa-arrow-down"></i>
          <% end %>
        <% end %>
      </th>
      <th>NO. of Employees</th>
      <th>EDIT</th>
      <th>DELETE</th>
    </tr>
    <%= render(@departments) || "There are no departments." %>
  </table>
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>

</div>
